[supervisord]
nodaemon=true

[program:web]
command=gunicorn --log-level debug --access-logfile - --error-logfile - -w 4 -b 0.0.0.0:%(ENV_PORT)s app:app
autostart=true
autorestart=true
stdout_logfile=/dev/stdout
stdout_logfile_maxbytes=0
stderr_logfile=/dev/stderr
stderr_logfile_maxbytes=0

[program:cron]
command=sh -c "while true; do python3 scripts/update_analytics_daily.py; sleep 43200; done"
autostart=true
autorestart=true 